{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "cleanUrls": true,
  "trailingSlash": false,

  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": ".next",

  "regions": ["iad1"],

  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },

  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/analyze",
      "destination": "/?tab=upload",
      "permanent": false
    },
    {
      "source": "/reports",
      "destination": "/?tab=reports",
      "permanent": false
    }
  ],

  "rewrites": [],

  "crons": []
}
